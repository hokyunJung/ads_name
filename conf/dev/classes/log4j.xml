<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/"
	debug="false">

	<appender name="APP_FILE" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/applogs/name/name.log" />
		<param name="DatePattern" value="'.'yyyy-MM-dd" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss,SSS} %-5p %c{2} [%t]: %m%n" />
		</layout>
	</appender>

	<appender name="STDOUT" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss,SSS} %-5p %c [%t]: %m%n" />
		</layout>
	</appender>

	<appender name="APP" class="org.apache.log4j.AsyncAppender">
		<appender-ref ref="APP_FILE" />
	</appender>

	<logger name="kr.co.ecf.ads.name" additivity="false">
		<level value="DEBUG" />
		<appender-ref ref="APP" />
	</logger>

	<root>
		<level value="DEBUG" />
		<appender-ref ref="APP" />
	</root>

</log4j:configuration>

